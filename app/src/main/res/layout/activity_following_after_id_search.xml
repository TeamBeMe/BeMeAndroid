<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".idsearch.FollowingAfterIdSearch">

        <ImageView
            android:id="@+id/btn_back_following_id_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_back_noticeview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/title_id_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="66dp"
            android:text="아이디 검색"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SearchView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="28dp"
            app:layout_constraintTop_toBottomOf="@id/title_id_search"
            android:layout_marginTop="34dp"
            app:iconifiedByDefault="false"
            app:queryHint="검색"
            android:background="@drawable/searchview_background"
            app:queryBackground="@android:color/transparent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>