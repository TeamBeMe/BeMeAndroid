<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="exploreViewModel"
            type="com.teambeme.beme.explore.viewmodel.ExploreViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".explore.view.ExploreFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_explore_otherminds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/explore_background_gray"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp">

                <ImageButton
                    android:id="@+id/btn_explore_plusFollower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="28dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_plus_follower"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/btn_explore_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="22dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_alarm"
                    app:layout_constraintBottom_toBottomOf="@id/btn_explore_plusFollower"
                    app:layout_constraintEnd_toStartOf="@id/btn_explore_plusFollower"
                    app:layout_constraintTop_toTopOf="@id/btn_explore_plusFollower" />


                <TextView
                    android:id="@+id/txt_explore_titleOfOtherminds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="72dp"
                    android:text="나와 다른 생각들"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_explore_descOfOtherminds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="내가 최근에 답한 질문들의 다른 답변이에요"
                    android:textColor="#636366"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@id/txt_explore_titleOfOtherminds"
                    app:layout_constraintTop_toBottomOf="@id/txt_explore_titleOfOtherminds" />

                <com.teambeme.beme.util.NestedScrollableHost
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_explore_descOfOtherminds">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_explore_otherminds"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:paddingStart="22dp"
                        android:paddingEnd="22dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/list_explore_otherminds" />

                </com.teambeme.beme.util.NestedScrollableHost>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_explore_otherquestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingBottom="40dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintlayout_explore_otherminds">

                <TextView
                    android:id="@+id/txt_explore_titleOfOtherquestions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="48dp"
                    android:text="다른 글 둘러보기"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_explore_descOfRecent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="내가 답한 질문에 대한 다른 사람들의 최신 답변이에요"
                    android:textColor="#636366"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@id/txt_explore_titleOfOtherquestions"
                    app:layout_constraintTop_toBottomOf="@id/txt_explore_titleOfOtherquestions" />

                <TextView
                    android:id="@+id/txt_explore_descOfExciting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="내가 관심있어 할 다른 사람들의 답변이에요"
                    android:textColor="#636366"
                    android:textSize="13sp"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="@id/txt_explore_titleOfOtherquestions"
                    app:layout_constraintTop_toBottomOf="@id/txt_explore_titleOfOtherquestions" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tablayout_explore_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="@id/txt_explore_titleOfOtherquestions"
                    app:layout_constraintTop_toBottomOf="@id/txt_explore_descOfRecent"
                    app:tabIndicatorColor="#000000"
                    app:tabSelectedTextColor="#000000"
                    app:tabTextColor="#8E8E93">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:text="최신" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:text="흥미" />

                </com.google.android.material.tabs.TabLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C9C9C9"
                    app:layout_constraintTop_toBottomOf="@+id/tablayout_explore_sort" />

                <HorizontalScrollView
                    android:id="@+id/scrollview_explore_chip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_constraintTop_toBottomOf="@id/tablayout_explore_sort">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_explore_otherquestions"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:paddingStart="28dp"
                        android:paddingTop="8dp"
                        app:singleLine="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_explore_1"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가치관"
                            android:textColor="@color/explore_chiptext_selector"
                            app:chipBackgroundColor="@color/explore_chip_selector"
                            app:chipCornerRadius="4dp"
                            app:chipStrokeColor="@color/explore_chipstroke_selector"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_explore_2"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="사랑"
                            android:textColor="@color/explore_chiptext_selector"
                            app:chipBackgroundColor="@color/explore_chip_selector"
                            app:chipCornerRadius="4dp"
                            app:chipStrokeColor="@color/explore_chipstroke_selector"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_explore_3"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="일상"
                            android:textColor="@color/explore_chiptext_selector"
                            app:chipBackgroundColor="@color/explore_chip_selector"
                            app:chipCornerRadius="4dp"
                            app:chipStrokeColor="@color/explore_chipstroke_selector"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_explore_4"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이야기"
                            android:textColor="@color/explore_chiptext_selector"
                            app:chipBackgroundColor="@color/explore_chip_selector"
                            app:chipCornerRadius="4dp"
                            app:chipStrokeColor="@color/explore_chipstroke_selector"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_explore_5"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="미래"
                            android:textColor="@color/explore_chiptext_selector"
                            app:chipBackgroundColor="@color/explore_chip_selector"
                            app:chipCornerRadius="4dp"
                            app:chipStrokeColor="@color/explore_chipstroke_selector"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_explore_6"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="의미"
                            android:textColor="@color/explore_chiptext_selector"
                            app:chipBackgroundColor="@color/explore_chip_selector"
                            app:chipCornerRadius="4dp"
                            app:chipStrokeColor="@color/explore_chipstroke_selector"
                            app:chipStrokeWidth="1dp" />

                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_explore_otherquestions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="40dp"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@id/btn_explore_showmore"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/scrollview_explore_chip"
                    tools:listitem="@layout/list_explore_otherquestions" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_explore_showmore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="152dp"
                    android:backgroundTint="#000000"
                    android:paddingTop="12dp"
                    android:paddingBottom="16dp"
                    android:text="더보기"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    app:cornerRadius="6dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rcv_explore_otherquestions" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>
</layout>