<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".explore.view.ExploreFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/constraintlayout_explore_otherminds"
        android:background="#e9e9e9"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="26dp"
            android:layout_height="18dp"
            android:background="@drawable/ic_plus_follower"
            android:id="@+id/btn_explore_plusFollower"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:background="@drawable/ic_alarm"
            android:id="@+id/btn_explore_alarm"
            android:layout_marginEnd="22dp"
            app:layout_constraintTop_toTopOf="@id/btn_explore_plusFollower"
            app:layout_constraintBottom_toBottomOf="@id/btn_explore_plusFollower"
            app:layout_constraintEnd_toStartOf="@id/btn_explore_plusFollower"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_explore_titleOfOtherminds"
            android:text="나와 다른 생각들"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="72dp"
            android:layout_marginStart="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_explore_descOfOtherminds"
            android:text="내가 최근에 답한 질문들의 다른 답변이에요"
            android:textSize="13sp"
            android:textColor="#636366"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/txt_explore_titleOfOtherminds"
            app:layout_constraintStart_toStartOf="@id/txt_explore_titleOfOtherminds"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/constraintlayout_explore_otherquestions"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout_explore_otherminds">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_explore_titleOfOtherquestions"
            android:text="다른 글 둘러보기"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="48dp"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_explore_descOfOtherquestions"
            android:text="나와 같은 질문에 다른 사람들은 이렇게 답했어요"
            android:textSize="13sp"
            android:textColor="#636366"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/txt_explore_titleOfOtherquestions"
            app:layout_constraintTop_toBottomOf="@id/txt_explore_titleOfOtherquestions"/>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:id="@+id/tablayout_explore_sort"
            app:tabIndicatorColor="#000000"
            app:tabTextColor="#8E8E93"
            app:tabSelectedTextColor="#000000"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="@id/txt_explore_descOfOtherquestions"
            app:layout_constraintStart_toStartOf="@id/txt_explore_titleOfOtherquestions"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>