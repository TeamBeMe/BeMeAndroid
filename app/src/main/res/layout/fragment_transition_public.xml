<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.home.view.TransitionPublicFragment">

    <TextView
        android:id="@+id/txt_home_transition_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="공개 질문으로 전환하시겠어요?"
        android:textColor="@color/home_black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_home_transition_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="12dp"
        android:padding="16dp"
        android:text="취소"
        android:textColor="@color/home_text_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_home_transition_public" />

    <TextView
        android:id="@+id/txt_home_transition_approve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:padding="16dp"
        android:text="확인"
        android:textColor="@color/home_blue"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/txt_home_transition_cancel"
        app:layout_constraintTop_toTopOf="@+id/txt_home_transition_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>
