<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="notificationVM"
            type="com.teambeme.beme.notification.viewmodel.NotificationViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".notification.NotificationActivity">

            <TextView
                android:id="@+id/title_this_week_back_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="98dp"
                android:fontFamily="@font/notosanskr_medium"
                android:text="이번 주 밀린 질문"
                android:textColor="#000"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_this_week_back_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_this_week_back_question"
                tools:listitem="@layout/item_this_week_back_question" />

            <ImageView
                android:id="@+id/notification_section_bar"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="#f3f3f3"
                app:layout_constraintTop_toBottomOf="@id/rcv_this_week_back_question" />

            <TextView
                android:id="@+id/title_recent_activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/notosanskr_medium"
                android:paddingBottom="8dp"
                android:text="최근 활동"
                android:textColor="#000"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/notification_section_bar" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_recent_activities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_recent_activities"
                tools:listitem="@layout/item_recent_activities" />

            <Button
                android:id="@+id/btn_recentActivities_show_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/btn_notification_to_see_more_background"
                android:fontFamily="@font/notosanskr_medium"
                android:text="더보기"
                android:textColor="#fff"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rcv_recent_activities" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>